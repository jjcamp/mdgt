{
    "search": {
        "uriRoot":"https://www.imdb.com",
        "searchPath":"/find/?q=*&s=nm",
        "firstResultXpath":"//*[@class='findResult odd']/td/a"
    },
    "root":{
        "xpath":"//*[@itemscope]",
        "items":[
            {
                "xpath":"//img[@id='name-poster']",
                "value":{
                    "name":"Image",
                    "type":"attr",
                    "attr":"src"
                }
            },
            {
                "xpath":"//*[@itemprop='name']",
                "value":{
                    "name":"Name",
                    "type":"text"
                }
            },
            {
                "xpath":"//div[@class='knownfor-title-role']/a",
                "repeat":true,
                "value":{
                    "name":"KnownFor",
                    "type":"text"
                }
            }
        ]
    }
}