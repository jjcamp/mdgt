{
	"search": {
		"uriRoot":"https://www.imdb.com",
		"searchPath":"/find/?q=*&s=tt",
		"firstResultXpath":"//*[@class='findResult odd']/td/a"
	},
	"root":{
		"xpath":"//*[@itemscope]",
		"items":[
			{
				"xpath":"//*[@itemprop='name']",
				"value":{
					"name":"Title",
					"type":"text"
				}
			},
			{
				"xpath":"//*[@itemprop='aggregateRating']",
				"items":[
					{
						"xpath":"//*[@itemprop='ratingValue']",
						"value":{
							"name":"Score",
							"type":"text"
						}
					},
					{
						"xpath":"//*[@itemprop='bestRating']",
						"value":{
							"name":"MaxScore",
							"type":"text"
						}
					}
				]
			},
			{
				"xpath":"//*[@itemprop='contentRating']",
				"value":{
					"name":"Rating",
					"type":"attr",
					"attr":"content"
				}
			},
			{
				"xpath":"//*[@itemprop='duration']",
				"value":{
					"name":"Duration",
					"type":"attr",
					"attr":"datetime"
				}
			},
			{
				"xpath":"//span[@itemprop='genre']",
				"repeat":true,
				"value":{
					"name":"Genre",
					"type":"text"
				}
			},
			{
				"xpath":"//*[@itemprop='datePublished']",
				"value":{
					"name":"Release",
					"type":"attr",
					"attr":"content"
				}
			},
			{
				"xpath":"//*[@itemprop='image']",
				"value":{
					"name":"Image",
					"type":"attr",
					"attr":"src"
				}
			},
			{
				"xpath":"//*[@itemprop='description']",
				"value":{
					"name":"Description",
					"type":"text"
				}
			},
			{
				"xpath":"//*[@itemprop='director']//*[@itemprop='name']",
				"value":{
					"name":"Director",
					"type":"text"
				}
			},
			{
				"xpath":"//*[@itemprop='creator'][@itemtype='http://schema.org/Person']//*[@itemprop='name']",
				"repeat":true,
				"value":{
					"name":"Writer",
					"type":"text"
				}
			},
			{
				"xpath":"//*[@itemprop='actors']//*[@itemprop='name']",
				"repeat":true,
				"value":{
					"name":"Actor",
					"type":"text"
				}
			}
		]
	}
}
